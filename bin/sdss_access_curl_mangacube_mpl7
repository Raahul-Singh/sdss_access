#!/usr/bin/env python3
from sdss_access import CurlAccess, AccessError
curl_access = CurlAccess(label='mangacube_mpl7',verbose=True)

#works if you have the sdss username in your ~/.netrc (or you will be prompted)
curl_access.remote()
#the alternative to setting the password in ~/.netrc is not recommended!
#curl_access.remote(username='sdss',password='***-******')

curl_access.add('mangacube', drpver='v2_4_3', plate=8485, ifu='19*')
curl_access.set_stream()

curl_access.commit()
