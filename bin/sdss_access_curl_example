#!/usr/bin/env python
from __future__ import absolute_import, division, print_function, unicode_literals
# The line above will help with 2to3 support.

from sdss_access import CurlAccess, AccessError
curl_access = CurlAccess(label='spZbest',mirror=True,public=False,verbose=True)

#works if you have the sdss username in your ~/.netrc (or you will be prompted)
curl_access.remote()
#the alternative to setting the password in ~/.netrc is not recommended!
#curl_access.remote(username='sdss',password='***-******')

#curl_access.add('mangacube', drpver='v1_5_1', plate=8485, ifu='*')
curl_access.add('spZbest', run2d='v5_7_2', run1d='v5_7_2', plateid=7339, mjd='*')
try: curl_access.set_stream()
except: print("error")

print("="*80)
print("example i): expand wildcard")
locations = curl_access.get_locations()
for location in locations: print("- %s" % location)

print("="*80)
print("example ii): first 5 (limit=5)")
locations = curl_access.get_locations(limit=5)
if locations:
    for location in locations: print("- %s" % location)

print("="*80)
print("example iii): next 5 (offset=5,limit=5)"
curl_access.get_locations(offset=5,limit=5)
if locations:
    for location in locations: print("- %s" % location)

print("="*80)
print("example iv): random 5 = shuffle then (limit=5)")
curl_access.shuffle()
locations = curl_access.get_locations(limit=5)
if locations:
    for location in locations: print("- %s" % location)

print("="*80)
print("example v): random 5 as paths")
curl_access.shuffle()
paths = curl_access.get_paths(limit=5)
if paths:
    for path in paths: print("- %s" % path)

print("="*80)
print("example vi): random 5 as urls")
curl_access.shuffle()
urls = curl_access.get_urls(limit=5)
if urls:
    for url in urls: print("- %s" % url)

#curl_access.commit(dryrun=True)
